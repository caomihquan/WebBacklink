@model PagedList.IPagedList<Models.EF.ProductCategory>

@using PagedList.Mvc;

@{
    ViewBag.Title = "Quản Lý Danh Mục Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Danh Mục Sản Phẩm
    }
<div class="row">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Danh Sách Danh Mục Sản Phẩm</h6>
            </div>
            @using (Html.BeginForm("Index", "ProductCategory", FormMethod.Get))
            {
                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-md-4">
                            <input type="text" value="@ViewBag.SearchString" class="form-control bg-light border-0 small" name="searchString" />
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn-primary">Tìm Kiếm</button>
                        </div>
                    </div>
                </div>
            }
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>SeoTittle</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="row_@item.ID">
                                        <td>@item.ID</td>
                                        <td>@item.Name</td>
                                        <td>@item.SeoTitle</td>
                                        <td>
                                            <a href="/Admin/ProductCategory/Edit/@item.ID">Sửa</a>
                                            |
                                            @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
                                        {
                                            Confirm = "Bạn có muốn xóa bản ghi này",
                                            OnComplete = "$('#row_" + @item.ID + "').remove()",
                                            HttpMethod = "Delete"
                                        })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }));
                    </div>
                </div>
            </div>
    </div>
</div>
