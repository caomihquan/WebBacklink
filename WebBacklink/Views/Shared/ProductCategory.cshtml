@model List<Models.EF.ProductCategory>
<ul>
    <h3>Danh mục sản phẩm</h3>

    @foreach (var item in Model.Where(x => x.ParentID == null))
    {
        var child = Model.Where(x => x.ParentID == item.ID);
        var parentClass = child.Count() > 0 ? "class=dropdown-toggle data-toggle=dropdown" : "";
        <li class="dropdown">
            <a href="/san-pham/@item.MetaTitle-@item.ID" @parentClass style="color:#000" >@item.Name</a>
            
                @if (child.Count() > 0)
                {

                    <ul class="dropdown-menu" style="width: 100%; border: none;">
                        @foreach (var childItem in child)
                        {
                            <li style="text-decoration: none; margin-left: 10px; font-size: 13px"><a href="/san-pham/@childItem.MetaTitle-@childItem.ID">@childItem.Name</a></li>
                        }

                    </ul>


                }
            
        </li>
    }
</ul>