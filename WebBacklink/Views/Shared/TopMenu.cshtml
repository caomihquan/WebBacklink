@model List<Models.EF.Menu>

<div class="nav">
    <div class="container-fluid">
        <nav class="navbar navbar-expand-md bg-dark navbar-dark">
            <a href="#" class="navbar-brand">
                Người Dùng
            </a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                <div class="navbar-nav mr-auto">
                </div>
                <div class="navbar-nav ml-auto">
                    @{
                        var session = (Models.EF.User)Session[WebBacklink.Common.CommonConstants.USER_SESSION];
                    }
                    @if (session == null)
                    {
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"><i class="fas fa-user"></i> Người Dùng</a>
                            <div class="dropdown-menu">
                                @foreach (var item in Model)
                                {
                                    <a href="@item.Link" target="@item.Target" class="dropdown-item">@item.Text</a>
                                }


                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Xin Chào: @session.UserName</a>
                            <div class="dropdown-menu">
                                <a href="/thong-tin"><div class="dropdown-item"> <i class="fas fa-user"></i> Thông Tin</div></a>
                                <a href="/dang-xuat"><div class="dropdown-item"> @*@Html.ActionLink("Thoát", "Logout", "User")*@ <i class="fas fa-sign-out-alt"></i> Đăng Xuất</div></a>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </nav>
    </div>
</div>