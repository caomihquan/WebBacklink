
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var slides = (List<Models.EF.Slide>)ViewBag.Slides;
    var listNewProducts = (List<Models.EF.Product>)ViewBag.NewProducts;
    var listFeatureProducts = (List<Models.EF.Product>)ViewBag.ListFeatureProducts;
}

@section slide
{
    <div class="header_slide">
        <div class="header_bottom_left">
            <div class="categories">
                @{ Html.RenderAction("ProductCategory", "Product");}
            </div>
        </div>
        <div class="header_bottom_right">
            <div class="slider">
                <div id="slider">
                    <div id="mover">
                        
                        @foreach (var item in slides)
                        {
                            
                            <div class="slide" id="slide-1">
                                <div class="slider-img">
                                    <a href="@item.Link"><img src="@item.Image" alt="learn more" /></a>
                                </div>
                                <div class="slider-text">
                                    <h1>@item.Name<br><span>SALE</span></h1>
                                    @*<h2>UPTo 20% OFF</h2>*@
                                    <div class="features_list">
                                        <h4>@item.Description</h4>
                                    </div>
                                    <a href="@item.Link" class="button">Đến Nơi Bán</a>
                                </div>
                                <div class="clear"></div>
                            </div>
                        }

                    </div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        <div class="clear"></div>
    </div>
}


<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>Sản Phẩm Mới</h3>
        </div>
        <div class="see">
            <p><a href="/san-pham">See all Products</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group" style="display:flex;flex-wrap:wrap;justify-content:space-evenly">

        @foreach (var item in listNewProducts)
        {
            var url = "/chi-tiet" + item.MetaTitle + "-" + item.ID;
            <div class="grid_1_of_4 images_1_of_4">
                <a href="@url"><img src="@item.Image" alt=""></a>
                <h2>@item.Name</h2>
                <p style="color:darkgray">@item.Decscription</p>
                <div style="display:flex;justify-content:space-around;border-top:1px solid blue;padding:10px;">
                    <div>
                        <p>Giá: <span class="rupees" style="color:red;">@(item.Price.HasValue?item.Price.Value.ToString("N0"):"Liên Hệ")</span></p>

                    </div>
                    <div><a href="/them-gio-hang?productId=@item.ID&quantity=1" style="color:red"><i class="fas fa-heart"></i></a></div>

                    <div class="clear"></div>
                </div>
                <div style="display:flex; justify-content:space-around;flex-wrap:wrap">
                    <h4><a href="@url" class="btn btn-success" >Xem Chi Tiết</a></h4>
                    <h4><a href="@item.Link" class="btn btn-primary" >Đến Nơi Bán</a></h4>
                </div>
            </div>
        }



    </div>
    <div class="content_bottom">
        <div class="heading">
            <h3>Sản Phẩm Nổi Bật</h3>
        </div>
        <div class="see">
            <p><a href="/san-pham">See all Products</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group" style="display:flex;flex-wrap:wrap;justify-content:space-evenly">
        @foreach (var item in listFeatureProducts)
        {
            var url = "/chi-tiet" + item.MetaTitle + "-" + item.ID;
            <div class="grid_1_of_4 images_1_of_4">
    <a href="@url"><img src="@item.Image" alt=""></a>
    <h2>@item.Name</h2>
                <p style="color:darkgray">@item.Decscription</p>
    <div style="display:flex;justify-content:space-around;border-top:1px solid blue;padding:10px;">
        <div >
            <p>Giá: <span class="rupees" style="color:red;">@(item.Price.HasValue?item.Price.Value.ToString("N0"):"Liên Hệ")</span></p>

        </div>
        <div ><a href="/them-gio-hang?productId=@item.ID&quantity=1" style="color:red"><i class="fas fa-heart"></i></a></div>
        
        <div class="clear"></div>
    </div>
    <div style="display:flex; justify-content:space-around;flex-wrap:wrap">
        <h4><a href="@url" class="btn btn-success">Xem Chi Tiết</a></h4>
        <h4><a href="@item.Link" class="btn btn-primary">Đến Nơi Bán</a></h4>
    </div>
</div>
        }

    </div>
</div>
