@model Models.EF.Content
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listRelatedContents = (List<Models.EF.Content>)ViewBag.RelatedContents;
}

<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>Tin Tức</h3>
        </div>

        <div class="clear"></div>
    </div>

    <div class="container">
        <h1 style=" font-size: 30px; color: red;line-height:40px; margin-top:20px;">@Model.Name</h1>
        <h4 style=" font-size: 12px; color: darkgrey;line-height:40px;">@Model.CreatedDate<span> by: <a href="#">@Model.CreatedBy</a></span></h4>
        
    </div>

    <div class="section-group container" style="padding:50px;">
        <p style="font-size:20px;color:#000;padding: 0 25% 20px 0">@Model.Decscription</p>
        <div style="padding: 0px 25% 50px 0px; line-height: 25px; color: #494747;">@Html.Raw(Model.Detail)</div>
        <div class="heading">Bài Viết Liên Quan</div>
        <br/>
        @foreach (var item in listRelatedContents)
        {
            var link = "/chi-tiet-bao" + item.MetaTitle + "-" + item.ID;
            
                        <a href="@link"style="display:flex;padding: 10px 25% 10px 0px;border-top: 1px solid rgba(34,34,34,.1);text-decoration:none;">
                            <span><img src="@item.Image" style="height:93px;width:150px;" /></span>
                             <div style="margin-left:20px;">
                        
                            <h1 style="font-size:25px;color:#000;">@item.Name</h1>
                            <p style="color:darkgrey">@item.Decscription</p>
                        
                            </div>
                        </a>
                   

            
        }
        <ul style="display: flex;border-top: 1px solid rgba(34,34,34,.1);padding:30px;">


            <li>Từ Khóa:  </li>
            @{

                var tags = (List<Models.EF.Tag>)ViewBag.Tags;
                foreach (var tag in tags)
                {
                    <li><a style="color:grey" href="/tag/@tag.ID">@tag.Name</a>  </li>
                }
            }
        </ul>
    </div>
</div>
