@model List<Models.EF.Content>
@{
    var category = (Models.EF.Category)ViewBag.Category;
    ViewBag.Title = category.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>@category.Name</h3>
        </div>
        <div class="see">
            <p><a href="/tin-tuc">Xem Tin Tức</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group" @*style="display:flex;flex-wrap:wrap;justify-content:space-evenly"*@>

        <!--Phan trang-->

        @if (Model.Count>0)
        {

            foreach (var item in Model)
            {
                var link = "/chi-tiet-bao" + item.MetaTitle + "-" + item.ID;
                <div class="image group">
                    <div class="grid images_3_of_1">
                        <a href="@link"><img src="@item.Image" alt=""></a>
                    </div>
                    <div class="grid news_desc">
                        <a href="@link"> <h3>@item.Name</h3></a>
                        <h4>@item.CreatedDate<span>  by:  <a href="#">@item.CreatedBy</a></span></h4>
                        <p style="color:#808080">@item.Decscription <a href="@link" title="more">[....]</a></p>
                    </div>
                </div>
            }
            <!--Phan trang-->
            if (ViewBag.TotalPage > 1)
            {
                var pageDisplay = (int)ViewBag.MaxPage;
                int totalPage = (int)ViewBag.TotalPage;
                int currentPage = ((int)ViewBag.Page);

                var startPageIndex = Math.Max(1, currentPage - pageDisplay / 2);
                var endPageIndex = Math.Min(totalPage, currentPage + pageDisplay / 2);

                var link = "/danh-muc/" + category.MetaTitle + "-" + category.ID;
                <div class="clear"></div>
                <nav>
                    <ul class="pagination">

                        @if (currentPage > ViewBag.First)
                        {
                            <li><a href="@link?page=@ViewBag.First" title="Trang Đầu" class="first"><i class="fa fa-angle-double-left"></i></a></li>
                            <li><a href="@link?page=@ViewBag.Prev" title="Trang Trước" class="prev"><i class="fa fa-angle-left"></i></a></li>
                        }
                        @for (int i = startPageIndex; i <= endPageIndex; i++)
                        {
                            if (currentPage == i)
                            {
                                <li><a href="@link?page=@i" class="active" title="Trang @i">@i</a></li>
                            }
                            else
                            {
                                <li><a href="@link?page=@i" class="pos" title="Trang @i">@i</a></li>

                            }
                        }
                        @if (currentPage < totalPage)
                        {
                            <li><a href="@link?page=@ViewBag.Next" class="next" title="Trang Sau"><i class="fa fa-angle-right"></i></a></li>
                            <li><a href="@link?page=@ViewBag.Last" class="last" title="Trang Cuối"><i class="fa fa-angle-double-right"></i></a></li>
                        }
                    </ul>
                </nav>

            }
        }
        else
        {
            <span>Không có bản ghi nào</span>
        }


    </div>
</div>

