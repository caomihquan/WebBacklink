@model List<WebBacklink.Models.SaveItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsFooter{
    <script src="/Assets/Customer/js/controller/saveController.js"></script>

}
<div class="wishlist-page">

    <div class="container-fluid">
        <div class="wishlist-page-inner">
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        @if (Model.Count > 0)
                        {
                            <table class="table table-bordered">
                                <thead class="thead-dark">
                                    <tr>

                                        <td>Tên Sản Phẩm</td>
                                        <td>Ảnh Sản Phẩm</td>
                                        <td></td>
                                        <td>Xóa</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        var link = "/chi-tiet" + item.Product.MetaTitle + "-" + item.Product.ID;
                                        <tr>


                                            <td>@item.Product.Name</td>
                                            <td><img src="@item.Product.Image" width="200" /></td>
                                            <td><a href="@link" class="btn btn-primary">Xem Chi Tiết</a></td>
                                            <td><a href="#" data-id="@item.Product.ID" class="btn-delete"><i class="fa fa-trash"></i></a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <div> </div>
                            <div>


                                <button id="btnContinue" class="btn btn-primary">Quay Lại Trang Chủ</button>
                                <button id="btnPayment" class="btn btn-info">Quay Lại Trang Sản Phẩm</button>
                                <button id="btnDeleteAll" class="btn btn-danger">Xóa Tất Cả</button>

                            </div>

                        }
                        else
                        {
                            <div class="alert alert-danger">
                                <span>Chưa Có Sản Phẩm Nào.</span>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


