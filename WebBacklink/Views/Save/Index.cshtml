@model List<Models.EF.SaveDetail>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
   
}

@section jsFooter{
    <script src="/Assets/Customer/js/controller/saveController.js"></script>

}
<div class="wishlist-page">
    <div class="container-fluid">
        <div class="wishlist-page-inner">
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        @if (Model.Count > 0)
                        {
                            <table class="table table-bordered">
                                <thead class="thead-dark">
                                    <tr>

                                        <td>Tên Sản Phẩm</td>
                                        <td>Ảnh Sản Phẩm</td>
                                        <td></td>
                                        <td>Xóa</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        var link = "/chi-tiet" + item.Metatitle + "-" + item.ProductID;

                                    <tr>


                                        <td>@item.Name</td>
                                        <td><img src="@item.Image" width="200" /></td>
                                        <td><a href="@link" class="btn btn-primary">Xem Chi Tiết</a></td>
                                        
                                        <td>

                                            @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID}, new AjaxOptions
                               {
                                   Confirm = "Bạn có muốn xóa bản ghi này",
                                   OnComplete = "$('#row_" + @item.ID+ "').remove()",
                                   HttpMethod = "Delete"
                               }, new { @class = "btn btn-danger" })
                                        </td>
                                    </tr>
                                    }

                                </tbody>
                            </table>
                            <div> </div>
                            <div>


                                <button id="btnContinue" class="btn btn-primary">Quay Lại Trang Chủ</button>
                                <button id="btnPayment" class="btn btn-info">Quay Lại Trang Sản Phẩm</button>
                                

                            </div>

                        }
                        else
                        {
                            <div class="alert alert-danger">
                                <span>Chưa Có Sản Phẩm Nào.</span>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


