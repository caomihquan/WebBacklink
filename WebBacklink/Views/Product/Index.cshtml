@model PagedList.IPagedList<Models.EF.Product>
@using PagedList.Mvc;
@{
    var category = (Models.EF.ProductCategory)ViewBag.Category;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>Sản Phẩm</h3>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group" style="display:flex;flex-wrap:wrap;justify-content:space-evenly">
        @foreach (var item in Model)
        {
            var url = "/chi-tiet" + item.MetaTitle + "-" + item.ID;
            <div class="grid_1_of_4 images_1_of_4">
                <a href="@url" ><img src="@item.Image" alt=""></a>
                <h2>@item.Name</h2>
                <p style="color:darkgray">@item.Decscription</p>
                <div style="display:flex;justify-content:space-around;border-top:1px solid blue;padding:10px;">
                    <div>
                        <p>Giá: <span class="rupees" style="color:red;">@(item.Price.HasValue?item.Price.Value.ToString("N0"):"Liên Hệ")</span></p>

                    </div>
                    <div><a href="/them-gio-hang?productId=@item.ID&quantity=1" style="color:red"><i class="fas fa-heart"></i></a></div>

                    <div class="clear"></div>
                </div>
                <div style="display:flex; justify-content:space-around;flex-wrap:wrap">
                    <h4><a href="@url" class="btn btn-success">Xem Chi Tiết</a></h4>
                    <h4><a href="@item.Link" class="btn btn-primary">Đến Nơi Bán</a></h4>
                </div>
            </div>
        }
        <div class="col-lg-12">
            <div class="dataTables_paginate paging_simple_numbers col-md-4" id="dataTable_paginate">


                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }), new PagedListRenderOptions
                {
               LiElementClasses = new List<string> { "page-item", "page-link" }
           })
            </div>
        </div>
