<div class="product-detail">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="product-detail-top">
                    <div class="row align-items-center">
                        <div class="col-md-5">
                            <div class="product-slider-single normal-slider">
                                <img src="@Model.Image" alt="@Model.Name">
                            </div>
                            <div class="product-slider-single-nav normal-slider">
                                <div class="slider-nav-img"><img src="@Model.Image" alt="@Model.Name"></div>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="product-content">
                                <div class="title"><h2>@Model.Name</h2></div>
                                <div class="description">@Model.Decscription</div>
                                <div class="ratting">
                                </div>
                                <div class="price">
                                    <h4>Price:</h4>
                                    @(Model.Price.HasValue?Model.Price.Value.ToString("N0"):"Liên Hệ")
                                </div>

                                <div class="p-size">
                                    
                                        <div class="addthis_inline_share_toolbox_fw73"></div>
                                    
                                </div>
                                <div class="p-color">

                                </div>  
                                <div class="action">
                                    <a class="btn" href="@Model.Link"><i class="fa fa-shopping-bag"></i>Đến Nơi Bán</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row product-detail-bottom">
                    <div class="col-lg-12">
                        <ul class="nav nav-pills nav-justified">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="pill" href="#description">Mô Tả</a>
                            </li>
                        </ul>

                        <div class="tab-content">
                            <div id="description" class="container tab-pane active">
                                <h4>Chi Tiết Sản Phẩm</h4>
                                <p>
                                    @Html.Raw(Model.Detail)
                                </p>
                            </div>
                            
                            
                        </div>
                    </div>
                </div>

                <div class="product">
                    <div class="section-header">
                        <h1>Related Products</h1>
                    </div>

                    <div class="row align-items-center product-slider product-slider-3">

                        @foreach (var item in relatedProducts)
                        {
                            var url = "/chi-tiet" + item.MetaTitle + "-" + item.ID;
                            <div class="col-lg-3">
                                <div class="product-item">
                                    <div class="product-title">
                                        <a href="@url">@item.Name</a>
                                    </div>
                                    <div class="product-image">
                                        <a href="product-detail.html">
                                            <img src="@item.Image" alt="Product Image">
                                        </a>
                                        <div class="product-action">
                                            <a href="/them-gio-hang?productId=@item.ID&quantity=1"><i class="fa fa-heart"></i></a>
                                            <a href="#"><i class="fa fa-search"></i></a>
                                        </div>
                                    </div>
                                    <div class="product-price">
                                        <h3><span></span></h3>
                                        <a class="btn" href="@item.Link"><i class="fa fa-shopping-cart"></i>Đến Nơi Bán</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Side Bar Start -->
            <div class="col-lg-4 sidebar">
                <div class="col-md-12">   
                    <nav class="navbar bg-light">
                        @{ Html.RenderAction("ProductCategory", "Product");}
                    </nav>
                </div>
                <div class="clear"></div>
                <div class="sidebar-widget widget-slider">
                    <div class="sidebar-slider normal-slider">
                        @foreach (var item in relatedProducts.Take(3))
                        {
                            var url = "/chi-tiet" + item.MetaTitle + "-" + item.ID;
                            <div class="product-item">
                                <div class="product-title">
                                    <a href="@url">@item.Name</a>
                                </div>
                                <div class="product-image">
                                    <a href="@url">
                                        <img src="@item.Image" alt="@item.Name">
                                    </a>
                                    <div class="product-action">

                                        <a href="/them-gio-hang?productId=@item.ID&quantity=1"><i class="fa fa-heart"></i></a>
                                        <a href="#"><i class="fa fa-search"></i></a>
                                    </div>
                                </div>
                                <div class="product-price">
                                    <h3><span></span></h3>
                                    <a class="btn" href="@item.Link"><i class="fa fa-shopping-cart"></i>Đến Nơi Bán</a>
                                </div>
                            </div>
                        }

                    </div>
                </div>




            </div>
            <!-- Side Bar End -->
        </div>
    </div>
</div>